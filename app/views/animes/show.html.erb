<h2 class="title is-2 mb-10"><%= @animes.title %></h2>


<p>
  <strong>Synopsis: </strong>
  <%= @animes.description%>
</p>

<p>
  <strong>Episodes: </strong>
  <%= @animes.episodes%>
</p>

<p>
  <strong>Status: </strong>
  <%= @animes.status%>
</p>

<p>
  <strong>Rating: </strong>
  <%= @animes.score %>
  <span style="font-size: 17px; color: gold;">‚≠ê</span>
</p>

<p>
  <strong>Genres: </strong>
  <%= @animes.genres.map(&:name).join(", ") %>
</p>

<p>
  <strong>Studio: </strong>
  <%= @animes.studios.map { |studio| link_to(studio.name, studio) }.join(", ").html_safe %>
</p>
<br>
<p>
  <strong></strong>
  <% if @animes.image_url.present? %>
    <img src="<%= @animes.image_url %>" alt="<%= @animes.title %>" style="max-width: 300px;" />
  <% else %>
    <p>No image available.</p>
  <% end %>
</p>





